<!DOCTYPE html>
<html>
  <head>
    <title>Play!</title>
    <%= javascript_include_tag 'i18n' %>
    <%= javascript_include_tag 'translations' %>
    <%= load_global8ball_game %>
    <script type="text/javascript">
      window.addEventListener('load', function() { window.initGlobal8Ball(<%= raw @game.config %>) }, false);
    </script>
    <style type="text/css">
      .button {
        font: bold 24px Arial;
        text-decoration: none;
        background-color: #EEEEEE;
        color: #333333;
        padding: 2px 6px 2px 6px;
        border-top: 1px solid #CCCCCC;
        border-right: 1px solid #333333;
        border-bottom: 1px solid #333333;
        border-left: 1px solid #CCCCCC;
      }
      #reload {
        float: right;
      }
      #da-game {
        height:105vh;
        width:140vh;
      }
    </style>
  </head>
  <body>
    <a href="#" id="reload" class="button" onclick="window.location.reload();">Reload</a>
    <div id="da-game"></div>
  </body>
</html>
